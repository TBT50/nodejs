doctype html
html(lang="en")
  include head/head.pug
  title #{docTitle}
  body
    header.page-header
      nav(class="page-nav container")
        ul.page-nav__list
          li: a(href="/" class="page-nav__link") Home
          li: a(href="/add-product" class="page-nav__link") Add Product
    main
      section.container
        if products.length > 0
          h1 My products (homepage)
          table
              tr
                th Title
                th Author
              each item in products
                tr
                  td: p= item.title
                  td: p= item.author
        else 
          h1 No Products